<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1><%= @recipe.name %></h1>
    <p><%= @recipe.ingredients %></p>
    <p><%= @recipe.cook_time %></p>
    <div class="">
      <form class="" action="/recipes/<%= @recipe.id %>/edit" method="post">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <input type="submit" name="" value="update this recipe">
      </form>
    </div>
    <div class="">
      <form class="" action="/recipes/<%= @recipe.id %>/delete" method="post">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input type="submit" name="" value="delete this recipe">
      </form>
    </div>
  </body>
</html>
